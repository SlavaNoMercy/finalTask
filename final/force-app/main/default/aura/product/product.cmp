<aura:component implements="forceCommunity:availableForAllPageTypes">
  <aura:attribute name="car" type="PricebookEntry" />
  <aura:attribute name="family" type="String" default="Niva" />
  <aura:handler name="init" action="{!c.doInit}" value="{!this}" />
  <div class="slds-region_narrow">
    <p>{!v.car.Product2.Name}</p>
    <img
      src="{!$Resource.LadaCenterHome + '/lada' + v.family + '.jpg'}"
    />
    <c:modalForCar car="{!v.car}" />
  </div>
</aura:component>
